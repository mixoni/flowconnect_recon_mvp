					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Status is 200', function () { pm.response.to.have.status(200); });",
									"const json = pm.response.json();",
									"if (Array.isArray(json) && json.length) {",
									"  pm.collectionVariables.set('matchId', json[0].id);",
									"  pm.collectionVariables.set('txId', json[0].bank_transaction_id);",
									"  pm.collectionVariables.set('invoiceId', json[0].invoice_id);",
									"}"
